.small-12
  %h3.title.margin-top-30
    .space
      = I18n.t(:titleEducations)
.padding-h-30.padding-top-30
  .small-12.columns.padding-left-20.padding-right-20
    - I18n.t(:educations).each do |education|
      .education.margin-bottom-20
        %h4
          #{education[:name]}
        %h6
          #{education[:date]}, #{education[:localization]}
        %div.margin-top-10
          - education[:courses].each do |course|
            %div.padding-top-5.font-0-9
              %i.fa.fa-minus.margin-right-5.margin-left-5.grey-6.font-0-7
              #{course}
