.row
  .small-12
    %h3.title.margin-top-30
      = I18n.t(:titleEducations)
.row.padding-h-30.padding-top-30
  .small-12.columns.padding-left-40.padding-right-40
    - I18n.t(:educations).each do |education|
      .education.margin-bottom-20
        %h4
          #{education[:name]}
        %h6
          #{education[:date]}, #{education[:localization]}
        %div.margin-top-10
          - education[:courses].each do |course|
            %div.padding-top-5{style: "font-size:0.9rem"}
              %i.fa.fa-minus.margin-right-5.margin-left-5.grey-6{style: 'font-size:0.7rem'}
              #{course}